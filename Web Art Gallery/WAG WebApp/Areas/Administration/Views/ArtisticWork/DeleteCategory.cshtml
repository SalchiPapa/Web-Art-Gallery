@model WAG.ViewModels.ArtisticWorks.DeleteCategoryViewModel

@{
    ViewData["Title"] = "DeleteCategory";
}

<div class="container-fluid">
    <div class="row">
        <header class="col-12">
            <h1 class="text-center">Delete Category</h1>
        </header>
    </div>
</div>

<main class="container-fluid">
    <div class="row">

        <aside class="col-sm-3 col-12 left-panel">
            <img src="~/images/artCategories/@Model.ArtWorkCategory.MainPictureFileName" style="width:200px; padding-bottom:25px" />
            <div>
                <p>Name: @Model.ArtWorkCategory.Name</p>
            </div>
        </aside>

        <section class="col-sm-9 col-12 right-panel">
            <div>
                <h2>Are you sure you want to delete permanently this Category?</h2>
                <br />
                <div>
                    <form method="post" asp-area="Administration" asp-controller="ArtisticWork" asp-action="DeleteCategory" asp-route-id="@Model.ArtWorkCategory.Id">
                        <button type="submit" class="btn btn-warning">Delete</button>
                    </form>
                </div>
            </div>
        </section>

    </div>
</main>

