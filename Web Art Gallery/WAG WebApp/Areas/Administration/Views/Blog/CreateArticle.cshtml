@model WAG.ViewModels.Blog.CreateArticleViewModel

@{
    ViewData["Title"] = "CreateArticle";
}

<h2 class="text-center">Create Article</h2>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data" asp-area="Administration" asp-controller="Blog" asp-action="CreateArticle">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Title..." style="width:70%"/>
                </div>
                <div class="form-group">
                    <label asp-for="ShortDescription"></label>
                    <textarea asp-for="ShortDescription" class="form-control" style="width:80%; height:100px"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="ArticleContent"></label>
                    <textarea asp-for="ArticleContent" class="form-control" style="width:100%;height:300px"></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="MainPicture"></label>
                    <input type="file" asp-for="MainPicture">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
