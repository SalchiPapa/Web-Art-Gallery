@using Microsoft.AspNetCore.Identity
@using WAG.Data.Models
@inject SignInManager<WAGUser> SignInManager
@inject UserManager<WAGUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    if (User.IsInRole("Admin"))
    {
        <ul class=" nav navbar-nav">
            <li>
                <a asp-area="Administration" asp-action="IndexAdmin" asp-controller="AppManager">Administrator</a>
            </li>
        </ul>
    }


    <form asp-area="" asp-action="Logout" asp-controller="UserAccount" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav">
            <li>
                <a asp-area="" asp-controller="Order" asp-action="MyOrders">My Orders</a>
            </li>
            <li>
                <a asp-area="" asp-controller="UserAccount" asp-action="MyProfile">My Profile</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-action="Register" asp-controller="UserAccount">Register</a></li>
        <li><a asp-action="Login" asp-controller="UserAccount">Login</a></li>
    </ul>
}