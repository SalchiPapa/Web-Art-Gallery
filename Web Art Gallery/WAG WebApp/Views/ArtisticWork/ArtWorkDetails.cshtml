@model WAG.ViewModels.ArtisticWorks.ArtWorkDetailsViewModel
@{
    ViewData["Title"] = "ArtWorkDetails";

}
<header class="container-fluid">
    <div class="row">
        <div class="col-12"></div>
    </div>
</header>

<main class="container-fluid" style="padding-top:70px">
    <div class="row">
        <aside class="col-sm-3 col-12 left-panel" style="border:solid">
            <h3 style="text-align:center">Artwork details</h3>
            <p>Year: @Model.ArtisticWork.Year</p>
            <p>Height: @Model.ArtisticWork.Height</p>
            <p>Width: @Model.ArtisticWork.Width</p>
            <p>Price: @Model.ArtisticWork.Price</p>
            <br />
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
            {
                <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="MakeOrder" asp-route-id="@Model.ArtisticWork.Id">Order</a>
            }

            @if (!User.Identity.IsAuthenticated)
            {
                <a class="btn btn-primary" asp-area="" asp-controller="UserAccount" asp-action="Login">Order</a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary" asp-area="Administration" asp-controller="ArtisticWork" asp-action="EditArtWork" asp-route-id="@Model.ArtisticWork.Id">Edit</a>
                <a class="btn btn-primary" asp-area="Administration" asp-controller="ArtisticWork" asp-action="DeleteArtWork" asp-route-id="@Model.ArtisticWork.Id">Delete</a>

            }
        </aside>
        <section class="col-sm-9 col-12 right-panel">
            <img src="~/images/artWorks/@Model.ArtisticWork.PictureFileName" alt="Picture of the artwork" />
        </section>
    </div>
</main>